@if (!User.Identity.IsAuthenticated) 
{
    <a class="btn-success btn" asp-controller="Users" asp-action="Login">Login</a>
    <a class="btn-success btn" asp-controller="Users" asp-action="Register">Inscription</a>
}
else 
{
    <form asp-action="Logout" asp-controller="Users">
        <button class="btn btn-warning" type="submit">Logout</button>
    </form>
}